<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <EditTextPreference
        android:key="pref_key_mqtt_user"
        android:summary="@string/pref_summary_mqtt_user"
        android:title="@string/pref_title_mqtt_user" />

    <EditTextPreference
        android:key="pref_key_mqtt_password"
        android:summary="@string/pref_summary_mqtt_password"
        android:title="@string/pref_title_mqtt_password"
        android:inputType="textPassword" />

    <EditTextPreference
        android:key="pref_key_mqtt_uri"
        android:summary="@string/pref_summary_mqtt_uri"
        android:title="@string/pref_title_mqtt_uri"
        android:defaultValue="tcp://c-beam.cbrp3.c-base.org:1883" />

    <CheckBoxPreference
        android:key="pref_key_mqtt_tls"
        android:title="@string/pref_title_mqtt_tls"
        android:summary="@string/pref_summary_mqtt_tls"
        android:defaultValue="false" />

    <EditTextPreference
        android:key="pref_key_default_url"
        android:summary="@string/pref_summary_default_url"
        android:title="@string/pref_title_default_url"
        android:defaultValue="http://c-beam.cbrp3.c-base.org/c-beam-viewer" />

</PreferenceScreen>